<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="955dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/urbanist_light"
                android:text="QUARTO"
                android:textSize="45sp" />

            <Button
                android:id="@+id/quitButton"
                android:layout_width="263dp"
                android:layout_height="81dp"
                android:layout_weight="1"
                android:fontFamily="@font/urbanist_light"
                android:text="Quit"
                android:textSize="45sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">

        <edu.up.cs301.quarto.QuartoBoardView
            android:id="@+id/surfaceView"
            android:layout_width="985dp"
            android:layout_height="match_parent"
            android:layout_weight="10" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urbanist_light"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/urbanist_light"
                    android:text="Opponent's Piece" />

                <ImageView
                    android:id="@+id/imageView6"
                    tools:srcCompat="/Users/magnusgraham/AndroidStudioProjects/QuartoGUi/app/src/main/res/drawable/Screenshot 2024-09-14 at 6.48.55 PM.png"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist_light"
                    android:text="Pieces" />

                <ImageView
                    android:id="@+id/imageView8"
                    tools:srcCompat="/Users/magnusgraham/AndroidStudioProjects/QuartoGUi/app/src/main/res/drawable/quarto-3.png.webp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/urbanist_light"
                    android:text="Your Piece" />

                <ImageView
                    android:id="@+id/imageView9"
                    tools:srcCompat="/Users/magnusgraham/AndroidStudioProjects/QuartoGUi/app/src/main/res/drawable/Screenshot 2024-09-14 at 6.48.45 PM.png"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
