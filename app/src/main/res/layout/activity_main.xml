<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topLevel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/quartoButton"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="QUARTO"
                android:textSize="45sp" />

            <Button
                android:id="@+id/quitButton"
                android:layout_width="263dp"
                android:layout_height="81dp"
                android:layout_weight="1"
                android:text="Quit"
                android:textSize="45sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">

            <edu.up.cs301.quarto.QuartoBoardView
                android:id="@+id/QuartoBoardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/PlayerTurn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#306632"
                    android:text="Your Turn: Select a Piece"
                    android:textAlignment="center"
                    android:textColor="#F6F6F6"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp">

                <TextView
                    android:id="@+id/allPieces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pieces Available:"
                    android:textSize="24sp" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imageButton1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="#FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/shortholedarksquare" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="#FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/shortholedarkcircle" />

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="#FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/shortholelightsquare" />

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="#FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/shortholelightcircle" />

                </androidx.gridlayout.widget.GridLayout>

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="#FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/shortsoliddarksquare" />

                    <ImageButton
                        android:id="@+id/imageButton6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="#FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/shortsoliddarkcircle" />

                    <ImageButton
                        android:id="@+id/imageButton7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="#FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/shortsolidlightsquare" />

                    <ImageButton
                        android:id="@+id/imageButton8"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="#FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/shortsolidlightcircle" />

                </androidx.gridlayout.widget.GridLayout>

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imageButton9"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="#FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tallholedarksquare" />

                    <ImageButton
                        android:id="@+id/imageButton10"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="#FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tallholedarkcircle"
                        android:text="TALL, HOLE, DARK, CIRCLE" />

                    <ImageButton
                        android:id="@+id/imageButton11"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="#FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tallholelightsquare" />

                    <ImageButton
                        android:id="@+id/imageButton12"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="#FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tallholelightcircle" />

                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButton13"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tallsoliddarksquare" />

                <ImageButton
                    android:id="@+id/imageButton14"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tallsoliddarkcircle" />

                <ImageButton
                    android:id="@+id/imageButton15"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tallsolidlightsquare" />

                <ImageButton
                    android:id="@+id/imageButton16"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tallsolidlightcircle" />
            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
